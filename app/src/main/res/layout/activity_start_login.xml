<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
   >
<data>
    <variable
        name="userinfo"
        type="com.example.yt.myapplication.entitys.Userinfo" />
</data>
   <android.support.design.widget.AppBarLayout
       android:layout_width="match_parent"
       android:background="#ffffff"
       android:layout_height="wrap_content">
       <android.support.v7.widget.Toolbar
           android:id="@+id/toolbar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
              android:onClick="Returnactivity"
               android:layout_width="20dp"
               android:layout_height="50dp"
               android:src="@mipmap/iconf_left"
               android:rotation="180"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="left"
               android:textSize="22dp"
               android:textColor="#1A1919"
               android:text="用户登录"/>
       </android.support.v7.widget.Toolbar>
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <EditText
               android:singleLine="true"
               android:id="@+id/xuehao"
               android:text="@{userinfo.student_id}"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:hint="请输入学号"/>
           <EditText
               android:singleLine="true"
               android:inputType="textPassword"
               android:id="@+id/sfz"
               android:text="@{userinfo.id_card}"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:hint="请输入身份证"/>
           <Button
               android:layout_margin="20dp"
               android:gravity="center"
               android:textColor="#ffffff"
               android:text="下一步"
               android:onClick="startfelling"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/next_btn"/>
       </LinearLayout>
   </android.support.design.widget.AppBarLayout>
</layout>