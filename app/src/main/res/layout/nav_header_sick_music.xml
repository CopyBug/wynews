<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorbg"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <de.hdodenhof.circleimageview.CircleImageView
            android:paddingLeft="15dp"
            android:paddingTop="30dp"
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:elevation="10dp"
            android:layout_height="80dp"
            android:contentDescription="@string/nav_header_desc"

            android:src="@mipmap/ic_launcher_round" />

        <RelativeLayout
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/textfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="用户名"
                android:id="@+id/header_username"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <Button
                android:id="@+id/header_qiandao"
                android:drawablePadding="4dp"
                android:paddingLeft="12dp"
                android:drawableLeft="@mipmap/icon_qiandao"
                android:gravity="left|center_vertical"
                android:background="@drawable/icon_qiandao"
                android:layout_alignParentEnd="true"
                android:layout_width="70dp"
                android:textSize="10dp"
                android:layout_height="20dp"
                android:text="签到"/>
        </RelativeLayout>

        <TextView
            android:paddingLeft="25dp"
            style="@style/textfont"
            android:id="@+id/header_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lv8" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/header_message"
                android:gravity="center"
                style="@style/textfont"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/mmessage"
                android:drawableTop="@mipmap/icon_message"/>
            <TextView
                android:id="@+id/header_user"
                android:gravity="center"
                style="@style/textfont"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/mmessage"
                android:drawableTop="@mipmap/icon_user"/>
            <TextView
                android:id="@+id/header_pifu"
                android:gravity="center"
                style="@style/textfont"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/mmessage"
                android:drawableTop="@mipmap/icon_clothes"/>
            <TextView
                android:id="@+id/header_voice"
                android:gravity="center"
                style="@style/textfont"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/mmessage"
                android:drawableTop="@mipmap/icon_voice"/>
        </LinearLayout>
    </LinearLayout>
